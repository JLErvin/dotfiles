[module/emails]
type = custom/script
exec = python /home/jlervin/.scripts/email.py
tail = true
interval = 90
format = <label>
format-background = ${colors.malbg}
format-foreground = ${colors.malfg}
format-padding = 1 
label = ÓÑ§ %output% 

